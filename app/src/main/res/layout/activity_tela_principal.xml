<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.victorhugo.agenciadafaxina.TelaPrincipal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Dom"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Seg"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Ter"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Qua"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Qui"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Sex"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Sab"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/dom_dia"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/seg_dia"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/ter_dia"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/qua_dia"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/qui_dia"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/sex_dia"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/sab_dia"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:text="INÃCIO"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:layout_width="70dp"
                android:layout_height="match_parent" />
        <TimePicker
            android:timePickerMode="spinner"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/time_inicial" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:text="FIM"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:layout_width="70dp"
                android:layout_height="match_parent"/>
            <TimePicker
                android:timePickerMode="spinner"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:id="@+id/time_final"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/barrainferior"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:theme="@style/AgendarButton"
            android:layout_weight="4"
            android:text="agendar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:onClick="agendar"
            />
        <ImageButton
            android:theme="@style/ResetButton"
            android:src="@drawable/reset_icon"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:onClick="reset"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/email"
        android:layout_marginTop="16dp"
        android:hint="E-mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/barrainferior"
        />
</RelativeLayout>
